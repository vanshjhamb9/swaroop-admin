rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow dealers to read their own dealer document
    match /dealers/{dealerId} {
      allow read: if request.auth.uid == dealerId;
      allow write: if request.auth.uid == dealerId && request.auth.token.dealeradmin == true;
      
      // Allow dealers to read their own vehicles subcollection
      match /vehicles/{vehicleId} {
        allow read: if request.auth.uid == dealerId;
        allow write: if request.auth.uid == dealerId && request.auth.token.dealeradmin == true;
      }
    }
    
    // Allow users to read their own user document
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // Allow admins to read admin documents
    match /admins/{adminId} {
      allow read: if request.auth.uid == adminId;
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
